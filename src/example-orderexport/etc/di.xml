<?xml version="1.0"?>
<config xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:noNamespaceSchemaLocation="urn:magento:framework:ObjectManager/etc/config.xsd">
    <type name="Magento\Framework\Console\CommandListInterface">
        <arguments>
            <argument name="commands" xsi:type="array">
                <item name="orderExportRun" xsi:type="object">SwiftOtter\OrderExport\Console\Command\OrderExport</item>
            </argument>
        </arguments>
    </type>

    <type name="SwiftOtter\OrderExport\Action\CollectOrderData">
        <arguments>
            <argument name="collectors" xsi:type="array">
                <item name="order_header_data" xsi:type="object">SwiftOtter\OrderExport\Action\OrderDataCollector\OrderHeaderData</item>
                <item name="order_item_data" xsi:type="object">SwiftOtter\OrderExport\Action\OrderDataCollector\OrderItemData</item>
                <item name="export_header_data" xsi:type="object">SwiftOtter\OrderExport\Action\OrderDataCollector\ExportHeaderData</item>
            </argument>
        </arguments>
    </type>

    <type name="SwiftOtter\OrderExport\Action\GetOrderExportItems">
        <arguments>
            <argument name="allowedTypes" xsi:type="array">
                <item name="simple" xsi:type="const">Magento\Catalog\Model\Product\Type::DEFAULT_TYPE</item>
                <item name="virtual" xsi:type="const">Magento\Catalog\Model\Product\Type::TYPE_VIRTUAL</item>
            </argument>
        </arguments>
    </type>

    <type name="Magento\Config\Model\Config\TypePool">
        <arguments>
            <argument name="sensitive" xsi:type="array">
                <item name="sales/order_export/api_token" xsi:type="string">1</item>
            </argument>
            <argument name="environment" xsi:type="array">
                <item name="sales/order_export/api_url" xsi:type="string">1</item>
            </argument>
        </arguments>
    </type>

    <preference for="SwiftOtter\OrderExport\Api\Data\OrderExportDetailsInterface"
                type="SwiftOtter\OrderExport\Model\OrderExportDetails" />
    <preference for="SwiftOtter\OrderExport\Api\OrderExportDetailsRepositoryInterface"
                type="SwiftOtter\OrderExport\Model\OrderExportDetailsRepository" />
    <preference for="SwiftOtter\OrderExport\Api\Data\OrderExportDetailsSearchResultsInterface"
                type="SwiftOtter\OrderExport\Model\OrderExportDetailsSearchResults" />

    <virtualType name="SwiftOtter\OrderExport\Virtual\Model\Api\SearchCriteria\DetailsCollectionProcessor" type="Magento\Framework\Api\SearchCriteria\CollectionProcessor">
        <arguments>
            <argument name="processors" xsi:type="array">
                <item name="filters" xsi:type="object">Magento\Framework\Api\SearchCriteria\CollectionProcessor\FilterProcessor</item>
                <item name="sorting" xsi:type="object">Magento\Framework\Api\SearchCriteria\CollectionProcessor\SortingProcessor</item>
                <item name="pagination" xsi:type="object">Magento\Framework\Api\SearchCriteria\CollectionProcessor\PaginationProcessor</item>
            </argument>
        </arguments>
    </virtualType>
    <type name="SwiftOtter\OrderExport\Model\OrderExportDetailsRepository">
        <arguments>
            <argument name="collectionProcessor" xsi:type="object">SwiftOtter\OrderExport\Virtual\Model\Api\SearchCriteria\DetailsCollectionProcessor</argument>
        </arguments>
    </type>

    <type name="Magento\Sales\Api\OrderRepositoryInterface">
        <plugin name="load_export_details_into_order" type="SwiftOtter\OrderExport\Plugin\LoadExportDetailsIntoOrder"/>
    </type>
</config>
